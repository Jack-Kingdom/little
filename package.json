{
  "name": "ownblog",
  "version": "0.0.1",
  "description": "my own blog app",
  "author": "Jack",
  "email": "email@qiaohong.org",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch utils/webpackDev.js --exec babel-node utils/webpackDev.js",
    "build": "relay-compiler --src ./src --schema ./graphql.schema.json && babel-node  utils/webpackBuild.js",
    "update-schema": "babel-node utils/updateSchema.js",
    "relay": "relay-compiler --src ./src --schema ./graphql.schema.json --watch",
    "clean": "rm -rf dist && mkdir dist",
    "standard": "standard --fix"
  },
  "pre-commit": [
    "standard"
  ],
  "standard": {
    "global": [
      "fetch"
    ]
  },
  "dependencies": {
    "antd": "^2.12.6",
    "draft-js": "^0.10.1",
    "graphql": "^0.10.5",
    "katex": "^0.7.1",
    "markdown-it": "^8.3.2",
    "moment": "^2.18.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-markdown": "^2.5.0",
    "react-relay": "^1.1.0",
    "react-router-dom": "^4.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-import": "^1.3.1",
    "babel-plugin-relay": "^1.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "compression-webpack-plugin": "^1.0.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "fetch-graphql-schema": "^0.2.1",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "nodemon": "^1.11.0",
    "pre-commit": "^1.2.2",
    "relay-compiler": "^1.1.0",
    "relay-runtime": "^1.1.0",
    "standard": "^10.0.3",
    "style-loader": "^0.16.1",
    "uglify-js": "^2.8.29",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "url-loader": "^0.5.9",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.6.1"
  }
}
